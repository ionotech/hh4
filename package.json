{
  "name": "hh4",
  "version": "1.0.0",
  "description": "hh4 - Full-stack application",
  "author": "IonoLab",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter=\"./apps/**\" dev",
    "build": "pnpm --filter=db generate && pnpm --recursive --filter=\"./apps/**\" build",
    "start": "pnpm --filter backend start",
    "start:prod": "pnpm --filter frontend start",
    "db:migrate": "pnpm --filter db migrate",
    "db:generate": "pnpm --filter db generate",
    "db:studio": "pnpm --filter db studio",
    "db:push": "pnpm --filter db push",
    "lint": "pnpm --recursive --filter=\"./apps/**\" lint",
    "test": "pnpm --recursive --filter=\"./apps/**\" test"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "typescript": "5.4.5"
    }
  }
}
